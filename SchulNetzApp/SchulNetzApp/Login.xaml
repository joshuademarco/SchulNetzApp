<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchulNetzApp.Login">
    <ContentPage.Content>
        <StackLayout ClassId="" Margin="50,20,0,0">


            <Label Text="Anmelden" FontSize="32" ClassId="title" Margin="0,0,20,50"/>
            <Label Text="Gib deine Anmeldedaten für SchulNetz.ch ein" FontSize="16" Margin="0,0,0,10" Opacity="0.8" />
            
            <Entry Placeholder="Benutzername" InputTransparent="false" IsSpellCheckEnabled="False" Keyboard="Email" MaxLength="30" x:Name="UserInput" VerticalOptions="Center"/>
            <Entry Placeholder="Passwort" InputTransparent="False" IsSpellCheckEnabled="False" Keyboard="Default" MaxLength="50" x:Name="PassInput" IsPassword="True" IsTextPredictionEnabled="False" VerticalOptions="Center"/>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>